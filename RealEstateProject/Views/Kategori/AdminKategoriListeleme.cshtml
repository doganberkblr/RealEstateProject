@model IEnumerable<EntityLayer.Entities.Kategori>

@{
    ViewData["Title"] = "AdminKategoriListeleme";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Kategoriler</h1>

<p>
    <a asp-action="AdminKategoriEkle">Yeni Kategori Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KategoriDurumu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriDurumu)
            </td>
            <td>
                <a class="btn btn-success" asp-action="AdminKategoriDuzenle" asp-route-id="@item.KategoriID">Düzenle</a> |
                    <a class="btn btn-success" asp-action="AdminKategoriDetay" asp-route-id="@item.KategoriID">Detaylar</a> |
                    <a class ="btn btn-success" asp-action="AdminKategoriSil" asp-route-id="@item.KategoriID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
