
@{
    ViewData["Title"] = "LoginIndex";
    Layout = "~/Views/Shared/UI_Layout.cshtml";
}
<style>
    .LogIn{
        width:100%;
        height:200px;
    }
    span{
        font-size: 2em;
        text-align: center;
        color: #777;
        line-height: 1.8em;
        width: 50%;
        margin: 1em auto 0;
        font-weight: 400;
        display:block;
        margin-bottom:-15px;
    }
    .button1{
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: block;
        font-size: 16px;
        margin: 1em auto;
        cursor: pointer;
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        position: relative;
   
    }

    .button1:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }
</style>
<div class="LogIn">
    <span>İlanları görüntülemek ve ilan vermek için önce giriş yapmalısınız.</span>
    <a href="~/Login/GirisYap" class="button1">Giriş Yap</a>
</div>
@await Component.InvokeAsync("_ServicesPartial")

@await Component.InvokeAsync("_AboutPartial")

@await Component.InvokeAsync("_TestimonialsPartial")


