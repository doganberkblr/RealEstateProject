@model EntityLayer.Entities.Hizmetler

@{
    ViewData["Title"] = "AdminHizmetDuzenle";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Hizmet Düzenle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminHizmetDuzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HizmetID" />
            <div class="form-group">
                <label asp-for="HizmetAdi" class="control-label"></label>
                <input asp-for="HizmetAdi" class="form-control" />
                <span asp-validation-for="HizmetAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HizmetAciklamasi" class="control-label"></label>
                <input asp-for="HizmetAciklamasi" class="form-control" />
                <span asp-validation-for="HizmetAciklamasi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HizmetDurumu" /> @Html.DisplayNameFor(model => model.HizmetDurumu)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="AdminHizmetListeleme">Listeye Geri Dön</a>
</div>

