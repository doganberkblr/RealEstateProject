@model EntityLayer.Entities.Ilan

@{
    ViewData["Title"] = "IlanEkle";
    Layout = "~/Views/Shared/UI_Layout.cshtml";
}
<div style="width:33%;float:left;height:1050px"></div>
<div class="width:34%;float:left;height:1050px">
<h1>İlan Oluştur</h1>
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IlanEkle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Kullanıcı Adı</label>
                <select asp-for="KullaniciID" class ="form-control" asp-items="ViewBag.v1"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Kategorisi</label>
                <select asp-for="KategoriID" class ="form-control" asp-items="ViewBag.v2"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Konut Tipi</label>
                <select asp-for="KonutTipiID" class ="form-control" asp-items="ViewBag.v3"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Şehir</label>
                <select asp-for="SehirID" class ="form-control" asp-items="ViewBag.v4"></select>
            </div>
            <div class="form-group">
                <label asp-for="IlanBasligi" class="control-label"></label>
                <input asp-for="IlanBasligi" class="form-control" />
                <span asp-validation-for="IlanBasligi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanAciklamasi" class="control-label"></label>
                <input asp-for="IlanAciklamasi" class="form-control" />
                <span asp-validation-for="IlanAciklamasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanFiyati" class="control-label"></label>
                <input asp-for="IlanFiyati" class="form-control" />
                <span asp-validation-for="IlanFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanMetreKare" class="control-label"></label>
                <input asp-for="IlanMetreKare" class="form-control" />
                <span asp-validation-for="IlanMetreKare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanOdaSayisi" class="control-label"></label>
                <input asp-for="IlanOdaSayisi" class="form-control" />
                <span asp-validation-for="IlanOdaSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanBinaYasi" class="control-label"></label>
                <input asp-for="IlanBinaYasi" class="form-control" />
                <span asp-validation-for="IlanBinaYasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanFotografi" class="control-label" for="dosyaYukle"></label>
                <input asp-for="IlanFotografi" class="form-control-file" type="file" id="dosyaYukle" />
                <span asp-validation-for="IlanFotografi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IlanTarihi" class="control-label"></label>
                <input asp-for="IlanTarihi" class="form-control" />
                <span asp-validation-for="IlanTarihi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IlanEsyaliMİ" /> @Html.DisplayNameFor(model => model.IlanEsyaliMİ)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IlanDurumu" /> @Html.DisplayNameFor(model => model.IlanDurumu)
                </label>
            </div>
            <div class="form-group">
                <input classtype="submit" value="Ekle" class="btn btn-success" />
            </div>
        </form>
            <div>
                <a href="~/Default/LoginIndex">Geri Dön</a>
            </div>
    </div>
</div>
</div>

